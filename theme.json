{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    
    "settings": {
        "appearanceTools": true,
        
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px",
            "definitions": {
                "constraint": {
                    "content": {
                        "maxWidth": "1200px"
                    },
                    "wide": {
                        "maxWidth": "1400px"
                    },
                    "full": {
                        "maxWidth": "none"
                    }
                }
            }
        },

        "color": {
            "palette": [
                {
                    "slug": "primary-50",
                    "color": "#eff6ff",
                    "name": "Primary 50"
                },
                {
                    "slug": "primary-100",
                    "color": "#dbeafe",
                    "name": "Primary 100"
                },
                {
                    "slug": "primary-500",
                    "color": "#3b82f6",
                    "name": "Primary 500"
                },
                {
                    "slug": "primary-600",
                    "color": "#2563eb",
                    "name": "Primary 600"
                },
                {
                    "slug": "primary-700",
                    "color": "#1d4ed8",
                    "name": "Primary 700"
                },
                {
                    "slug": "primary-900",
                    "color": "#1e3a8a",
                    "name": "Primary 900"
                },
                {
                    "slug": "secondary-50",
                    "color": "#f8fafc",
                    "name": "Secondary 50"
                },
                {
                    "slug": "secondary-100",
                    "color": "#f1f5f9",
                    "name": "Secondary 100"
                },
                {
                    "slug": "secondary-500",
                    "color": "#64748b",
                    "name": "Secondary 500"
                },
                {
                    "slug": "secondary-700",
                    "color": "#334155",
                    "name": "Secondary 700"
                },
                {
                    "slug": "secondary-900",
                    "color": "#0f172a",
                    "name": "Secondary 900"
                },
                {
                    "slug": "accent-400",
                    "color": "#fb7185",
                    "name": "Accent 400"
                },
                {
                    "slug": "accent-500",
                    "color": "#f43f5e",
                    "name": "Accent 500"
                },
                {
                    "slug": "accent-600",
                    "color": "#e11d48",
                    "name": "Accent 600"
                },
                {
                    "slug": "success-400",
                    "color": "#4ade80",
                    "name": "Success 400"
                },
                {
                    "slug": "success-500",
                    "color": "#22c55e",
                    "name": "Success 500"
                },
                {
                    "slug": "warning-400",
                    "color": "#fbbf24",
                    "name": "Warning 400"
                },
                {
                    "slug": "warning-500",
                    "color": "#f59e0b",
                    "name": "Warning 500"
                },
                {
                    "slug": "error-400",
                    "color": "#f87171",
                    "name": "Error 400"
                },
                {
                    "slug": "error-500",
                    "color": "#ef4444",
                    "name": "Error 500"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "transparent",
                    "color": "transparent",
                    "name": "Transparent"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #6366f1 0%, #3b82f6 50%, #06b6d4 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "secondary-gradient",
                    "gradient": "linear-gradient(135deg, #64748b 0%, #475569 50%, #334155 100%)",
                    "name": "Secondary Gradient"
                },
                {
                    "slug": "accent-gradient",
                    "gradient": "linear-gradient(135deg, #f97316 0%, #ef4444 50%, #ec4899 100%)",
                    "name": "Accent Gradient"
                },
                {
                    "slug": "dark-gradient",
                    "gradient": "linear-gradient(135deg, #1e293b 0%, #0f172a 100%)",
                    "name": "Dark Gradient"
                },
                {
                    "slug": "light-gradient",
                    "gradient": "linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%)",
                    "name": "Light Gradient"
                },
                {
                    "slug": "premium-gradient",
                    "gradient": "linear-gradient(135deg, #f59e0b 0%, #d97706 25%, #b45309 50%, #92400e 75%, #78350f 100%)",
                    "name": "Premium Gradient"
                }
            ],
            "background": true,
            "text": true,
            "link": true
        },

        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "slug": "system-font",
                    "name": "System Font"
                },
                {
                    "fontFamily": "Inter, sans-serif",
                    "slug": "inter",
                    "name": "Inter"
                },
                {
                    "fontFamily": "'SF Arabic', 'Segoe UI', Tahoma, sans-serif",
                    "slug": "arabic-font",
                    "name": "Arabic Font"
                },
                {
                    "fontFamily": "'Noto Sans Arabic', 'Segoe UI', Tahoma, sans-serif",
                    "slug": "noto-arabic",
                    "name": "Noto Arabic"
                },
                {
                    "fontFamily": "Georgia, serif",
                    "slug": "georgia",
                    "name": "Georgia"
                },
                {
                    "fontFamily": "'Times New Roman', Times, serif",
                    "slug": "times-new-roman",
                    "name": "Times New Roman"
                },
                {
                    "fontFamily": "Monaco, 'Courier New', monospace",
                    "slug": "monospace",
                    "name": "Monospace"
                }
            ],
            "fontSizes": [
                {
                    "name": "Extra Small",
                    "size": "0.75rem",
                    "slug": "xs"
                },
                {
                    "name": "Small",
                    "size": "0.875rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "1.125rem",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "size": "1.25rem",
                    "slug": "xl"
                },
                {
                    "name": "XXL",
                    "size": "1.5rem",
                    "slug": "xxl"
                },
                {
                    "name": "XXXL",
                    "size": "1.875rem",
                    "slug": "xxxl"
                },
                {
                    "name": "Huge",
                    "size": "2.25rem",
                    "slug": "huge"
                },
                {
                    "name": "Giant",
                    "size": "3rem",
                    "slug": "giant"
                }
            ],
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "writingMode": true
        },

        "spacing": {
            "spacingSizes": [
                {
                    "name": "None",
                    "size": "0px",
                    "slug": "0"
                },
                {
                    "name": "XXS",
                    "size": "0.25rem",
                    "slug": "xxs"
                },
                {
                    "name": "XS",
                    "size": "0.5rem",
                    "slug": "xs"
                },
                {
                    "name": "Small",
                    "size": "0.75rem",
                    "slug": "s"
                },
                {
                    "name": "Medium",
                    "size": "1rem",
                    "slug": "m"
                },
                {
                    "name": "Large",
                    "size": "1.5rem",
                    "slug": "l"
                },
                {
                    "name": "XL",
                    "size": "2rem",
                    "slug": "xl"
                },
                {
                    "name": "XXL",
                    "size": "3rem",
                    "slug": "xxl"
                },
                {
                    "name": "XXXL",
                    "size": "4rem",
                    "slug": "xxxl"
                },
                {
                    "name": "Jumbo",
                    "size": "6rem",
                    "slug": "jumbo"
                }
            ],
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": ["px", "em", "rem", "%", "vh", "vw"]
        },

        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        },

        "shadow": {
            "presets": [
                {
                    "name": "Small",
                    "slug": "small",
                    "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
                },
                {
                    "name": "X-Large",
                    "slug": "x-large",
                    "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
                },
                {
                    "name": "Inner",
                    "slug": "inner",
                    "shadow": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
                }
            ]
        },

        "custom": {
            "cssVariables": {
                "--wp--custom--header-height": "80px",
                "--wp--custom--footer-height": "300px",
                "--wp--custom--border-radius-small": "0.375rem",
                "--wp--custom--border-radius-medium": "0.5rem",
                "--wp--custom--border-radius-large": "0.75rem",
                "--wp--custom--transition-fast": "150ms",
                "--wp--custom--transition-normal": "300ms",
                "--wp--custom--transition-slow": "500ms"
            }
        }
    },

    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--secondary-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6",
            "fontWeight": "400"
        },
        "spacing": {
            "padding": {
                "top": "0px",
                "bottom": "0px"
            },
            "margin": {
                "top": "0px",
                "bottom": "0px"
            },
            "blockGap": "var(--wp--preset--spacing--m)"
        },
        "blocks": {
            "core/heading": {
                "color": {
                    "text": "var(--wp--preset--color--secondary-900)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "lineHeight": "1.3",
                    "fontWeight": "700"
                },
                "elements": {
                    "h1": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--giant)",
                            "fontWeight": "800"
                        },
                        "spacing": {
                            "margin": {
                                "top": "0px",
                                "bottom": "var(--wp--preset--spacing--l)"
                            }
                        }
                    },
                    "h2": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--huge)",
                            "fontWeight": "700"
                        },
                        "spacing": {
                            "margin": {
                                "top": "var(--wp--preset--spacing--xl)",
                                "bottom": "var(--wp--preset--spacing--l)"
                            }
                        }
                    },
                    "h3": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xxxl)",
                            "fontWeight": "600"
                        },
                        "spacing": {
                            "margin": {
                                "top": "var(--wp--preset--spacing--l)",
                                "bottom": "var(--wp--preset--spacing--m)"
                            }
                        }
                    },
                    "h4": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xxl)"
                        }
                    },
                    "h5": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xl)"
                        }
                    },
                    "h6": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--large)"
                        }
                    }
                }
            },

            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.6",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                },
                "spacing": {
                    "margin": {
                        "top": "0px",
                        "bottom": "var(--wp--preset--spacing--m)"
                    }
                }
            },

            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary-600)",
                    "text": "var(--wp--preset--color--white)"
                },
                "border": {
                    "radius": "var(--wp--custom--border-radius-medium)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600",
                    "textTransform": "none"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-700)"
                    },
                    "shadow": "var(--wp--preset--shadow--medium)"
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-700)"
                    }
                }
            },

            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--xl)",
                        "bottom": "var(--wp--preset--spacing--xl)",
                        "left": "var(--wp--preset--spacing--m)",
                        "right": "var(--wp--preset--spacing--m)"
                    },
                    "blockGap": "var(--wp--preset--spacing--l)"
                },
                "variations": {
                    "constrained": {
                        "layout": {
                            "contentSize": "1200px"
                        }
                    }
                }
            },

            "core/columns": {
                "spacing": {
                    "blockGap": {
                        "left": "var(--wp--preset--spacing--l)"
                    }
                }
            },

            "core/column": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--m)",
                        "bottom": "var(--wp--preset--spacing--m)",
                        "left": "var(--wp--preset--spacing--m)",
                        "right": "var(--wp--preset--spacing--m)"
                    }
                }
            },

            "core/navigation": {
                "color": {
                    "background": "transparent",
                    "text": "var(--wp--preset--color--secondary-900)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "500"
                },
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--l)"
                }
            },

            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--xxl)",
                    "fontWeight": "700"
                }
            },

            "core/site-tagline": {
                "color": {
                    "text": "var(--wp--preset--color--secondary-500)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },

            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--secondary-100)"
                },
                "border": {
                    "width": "1px"
                }
            },

            "core/list": {
                "typography": {
                    "lineHeight": "1.6"
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--m)"
                    }
                }
            },

            "core/quote": {
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary-500)",
                        "width": "4px"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--m)"
                    }
                }
            },

            "core/pullquote": {
                "border": {
                    "top": {
                        "color": "var(--wp--preset--color--primary-500)",
                        "width": "4px"
                    },
                    "bottom": {
                        "color": "var(--wp--preset--color--primary-500)",
                        "width": "4px"
                    }
                }
            },

            "core/table": {
                "border": {
                    "color": "var(--wp--preset--color--secondary-100)",
                    "width": "1px"
                }
            },

            "core/cover": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--xxxl)",
                        "bottom": "var(--wp--preset--spacing--xxxl)"
                    }
                }
            },

            "core/image": {
                "border": {
                    "radius": "var(--wp--custom--border-radius-small)"
                }
            },

            "core/gallery": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--m)"
                }
            }
        }
    },

    "customTemplates": [
        {
            "name": "page-with-sidebar",
            "title": "Page with Sidebar",
            "postTypes": ["page"]
        },
        {
            "name": "full-width",
            "title": "Full Width",
            "postTypes": ["page", "post"]
        },
        {
            "name": "landing-page",
            "title": "Landing Page",
            "postTypes": ["page"]
        }
    ],

    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "area": "sidebar"
        }
    ]
}